{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "sourceMap": true,
    "outDir": "./out/src",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "chai-subset", "mocha"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/vscode-cordova/debugger/testapp/node_modules",
    "src/vscode-cordova/CordovaTypings",
    "src/vscode-cordova/out",
    "src/vscode-cordova/test/testProject"
]
}
